@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{ 
    var siteInfo = ViewBag.SiteInformation as Colectica.Portal.Models.Admin.SiteInformationModel;
}

    <environment names="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/shepherd/js/tether.js"></script>
        <script src="~/lib/shepherd/js/shepherd.js"></script>
        <script src="~/lib/jquery.cookiebar/jquery.cookiebar.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        <script src="~/js/Basket.js"></script>
        <script src="~/js/IntroTour.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/site.min.js"></script>
    </environment>


    @if (siteInfo.IsCookieWarningEnabled)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                $.cookieBar();
            });
        </script>
    }
